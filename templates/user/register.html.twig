{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Nouvel utilisateur{% endblock %}

{% block body %}

    {% block form %}
        {{ form_start(form) }}

        <div class="columns is-mobile">
            <div class="column is-10 is-offset-1">

                <div class="hero is-info">
                    <div class="hero-body">
                        <div class="container has-text-centered">
                            <h1 class="title">
                                Création d'un nouveau profile
                            </h1>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <section class="section column is-6">

            <!-- Name -->
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    {{ form_label(form.pseudo, 'Nom') }}
                </div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            {{ form_widget(form.pseudo, {'attr': {'class': 'input'}}) }}
                            {{ form_errors(form.pseudo) }}
                        </div>
                    </div>
                </div>
            </div>

            <!-- E-mail -->
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    {{ form_label(form._email, 'Courriel') }}
                </div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            {{ form_widget(form._email, {'attr': {'class': 'input'}}) }}
                            {{ form_errors(form._email) }}
                        </div>
                    </div>
                </div>
            </div>


           {# {% if form.plainPassword is defined %}  #}

            <!-- Password -->
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    {{ form_label(form.plainPassword, 'Mot de passe')  }}
                </div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            {{ form_widget(form.plainPassword, {'attr': {'class': 'input'}}) }}
                            {{ form_errors(form.plainPassword) }}
                        </div>
                        <p class="help is-warning">Le mot de passe doit se composer d'au moins 8 caractères, dont
                            au minimum 1 lettre majuscule, 1 chiffre, et ne comporter aucun espace.</p>
                    </div>
                </div>
            </div>

          {#  {% endif %} #}


            <!-- Load profile picture -->
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    {{ form_label(form.uploadFile, 'Photo') }}
                </div>
                <div class="field-body">
                    <div class="control">
                        <div class="file">
                            <label class="file-label" oninput="showFile()">

                                    {{ form_widget(form.uploadFile) }}
                                    {{ form_errors(form.uploadFile) }}

                            </label>
                            <output id="loadedFile"></output>
                        </div>
                    </div>
                </div>

            </div>

            {{ form_widget(form.submit, {'attr': {'class': 'button is-warning'} }) }}

        </section>

        {{ form_end(form) }}
    {% endblock %}
        <script defer src="{{ asset('/js/registration.js') }}"></script>

{% endblock %}