{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Modification données utilisateurs{% endblock %}

{% block body %}

    {% block form %}
        {{ form_start(form) }}

        <div class="columns is-mobile">
            <div class="column is-10 is-offset-1">

                <div class="hero is-info">
                    <div class="hero-body">
                        <div class="container has-text-centered">
                            <h1 class="title">
                                Modifier les données du profil
                            </h1>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <section class="section column is-6">

            <!-- Name -->
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    {{ form_label(form.pseudo, 'Nom') }}
                </div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            {{ form_widget(form.pseudo, {'attr': {'class': 'input'}}) }}
                            {{ form_errors(form.pseudo) }}
                        </div>
                    </div>
                </div>
            </div>

            <!-- E-mail -->
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    {{ form_label(form._email, 'Courriel') }}
                </div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            {{ form_widget(form._email, {'attr': {'class': 'input'}}) }}
                            {{ form_errors(form._email) }}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Load profile picture -->
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    {{ form_label(form.uploadFile, 'Photo') }}
                </div>
                <div class="field-body">
                    <div class="control">
                        <div class="file">
                            <label class="file-label">

                                {{ form_widget(form.uploadFile) }}
                                {{ form_errors(form.uploadFile) }}

                            </label>
                            <output id="loadedFile"></output>
                        </div>
                    </div>
                </div>

                <span class="has-text-weight-semibold is-italic tag is-white">Photo actuelle</span>
                <figure class="image is-64x64">
                    {% if app.user.avatar is defined %}
                    <img src="{{ asset('uploads/' ~ app.user.avatar) }}">
                    {% else %}
                    <img src="{{ asset('appImages/PersonPlaceholder.png') }}">
                    {% endif %}
                </figure>

            </div>

            {{ form_widget(form.submit, {'attr': {'class': 'button is-warning'} }) }}

        </section>

        {{ form_end(form) }}
    {% endblock %}
    <script defer src="{{ asset('/js/registration.js') }}"></script>

{% endblock %}