{% form_theme form _self %}

{% block form %}

    {{ form_start(form) }}

    <article class="media">

        <figure class="media-left">
            <p class="image is-64x64">
                {% if app.user.avatar.getPath is defined %}
                    <img src="{{ asset(app.user.avatar.getPath ?? '') }}">
                {% else %}
                    <img src="{{ asset('appImages/PersonPlaceholder.png') }}">
                {% endif %}
            </p>
        </figure>

        <div class="media-content">
            <div class="field">
                <p class="control">
                    {{ form_widget(form.content, {'attr': {'placeholder': 'Ajoute ton commentaire'} })  }}
                </p>
            </div>
            <div class="field">
                <p class="control">
                    {{ form_widget(form.submit, {'attr': {'class': 'button is-warning'} }) }}                </p>
            </div>
        </div>

    </article>


    {{ form_end(form) }}

{% endblock %}